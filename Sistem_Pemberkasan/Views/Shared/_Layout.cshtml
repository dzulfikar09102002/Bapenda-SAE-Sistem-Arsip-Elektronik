<!DOCTYPE html>
<html lang="en" data-theme="creative" data-layout="vertical" data-topbar="light" data-sidebar="dark" data-sidebar-size="lg" data-sidebar-image="img-4">
<head>
    <meta charset="utf-8" />
    <title> @ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Badan Pendapatan Daerah Kota Surabaya" name="description" />
    <meta content="SIPPJB" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/favicon.ico">
    @*VELZON CSS*@
    <script src="~/assets/js/layout.js"></script>
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/css/icons.min.css" rel="stylesheet" />
    <link href="~/assets/css/app.min.css" rel="stylesheet" />
    <link href="~/assets/css/custom.min.css" rel="stylesheet" />

    @*PLUGIN CSS*@
    <link href="~/assets/js/jquery-ui.css" rel="stylesheet" />
    <link href="~/assets/DataTables/datatables.min.css" id="app-style" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/spinner.css" id="app-style" rel="stylesheet" type="text/css" />
    <link href="~/assets/libs/filepond/filepond.min.css" rel="stylesheet" />
    <link href="~/assets/libs/filepond-plugin-image-preview/filepond-plugin-image-preview.min.css" rel="stylesheet" />
    <link href="~/assets/libs/dropzone/dropzone.css" rel="stylesheet" />
    <link href="~/assets/libs/flatpickr/themes/material_blue.css" rel="stylesheet" />
    <link href="~/assets/libs/swiper/swiper-bundle.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" />

    <script src="~/assets/js/modernizr-2.8.3.js"></script>
    <style type="text/css">
        .card-preloader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 9999;
            background: #ffffff;
        }

        #spiner {
            position: absolute;
            left: 50%;
            top: 40%;
            transform: translate(-50%,-50%);
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg)
            }
        }

        #loading1 {
            background-color: black;
            opacity: 0.5;
            z-index: 9999;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            position: fixed;
        }

        .spinner, .spinner::before, .spinner::after {
            content: '';
            display: block;
            border: 4px solid transparent;
            border-radius: 50%;
            animation: spin infinite linear 2s;
            position: absolute;
        }

        .spinner {
            width: 100px;
            height: 100px;
            border-top-color: orange;
            top: calc(50% - 50px);
            left: calc(50% - 50px);
        }

        .teks h2 {
            font-family: Calibri;
            color: #a9a4ff;
            position: fixed;
            margin-top: 15px;
            margin-left: -20px;
            top: calc(50% - 50px);
            left: calc(50% - 50px);
            text-align: center;
        }

        .spinner::before {
            border-top-color: magenta;
            animation-duration: 4s;
            top: 2px;
            bottom: 2px;
            left: 2px;
            right: 2px;
        }

        .spinner::after {
            border-top-color: cyan;
            top: 8px;
            bottom: 8px;
            left: 8px;
            right: 8px;
        }
        /* Please see documentation at https://docs.microsoft.com/aspnet/core/client-side/bundling-and-minification
                for details on configuring this project to bundle and minify static web assets. */

        a.navbar-brand {
            white-space: normal;
            text-align: center;
            word-break: break-all;
        }

        a {
            color: #0077cc;
        }

        .nav-pills .nav-link.active, .nav-pills .show > .nav-link {
            color: #fff;
            background-color: #1b6ec2;
            border-color: #1861ac;
        }

        .border-top {
            border-top: 1px solid #e5e5e5;
        }

        .border-bottom {
            border-bottom: 1px solid #e5e5e5;
        }

        .box-shadow {
            box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .05);
        }

        .loader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.8); /* Ubah warna latar belakang sesuai kebutuhan */
            z-index: 9999; /* Pastikan z-index lebih tinggi dari elemen-elemen lainnya */
            display: none; /* Awalnya sembunyikan loader */
        }

        .logo_sby {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        button.accept-policy {
            font-size: 1rem;
            line-height: inherit;
        }

        @@keyframes blinker {
            0% {
                opacity: 0;
            }

            50% {
                opacity: .5;
            }

            100% {
                opacity: 1;
            }
        }
    </style>

</head>
<body>
    <div id="loader" class="loader" style="display: block">
        <div class="logo_sby">
            <img src="~/assets/images/logo-surabaya.png" height="100" />
        </div>
    </div>
    <div id="layout-wrapper">

        @await Html.PartialAsync("_Header")
        @await Component.InvokeAsync(nameof(Sistem_Pemberkasan.ViewComponents.Sidebar))
        @await Html.PartialAsync("_Modal")

        <div class="main-content">
            <div class="page-content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
                <!-- container-fluid -->
            </div>
            <!-- End Page-content -->
            <partial name="_Footer" />
        </div>
    </div>

    <div id="loading1" style="display:none">
        <div class="spinner">
        </div>
        <div class="teks">
            <h2>
                Sistem Pemberkasan
            </h2>
        </div>
    </div>

    <button onclick="topFunction()" class="btn btn-danger btn-icon" id="back-to-top">
        <i class="ri-arrow-up-line"></i>
    </button>

    @*VELZON JS*@

    <script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/assets/libs/feather-icons/feather.min.js"></script>
    <script src="~/assets/js/pages/plugins/lord-icon-2.1.0.js"></script>
    <script src="~/assets/js/plugins.js"></script>
    <script src="~/assets/js/app.js"></script>

    @*PLUGIN JS*@
    <script src="~/assets/js/jquery.js"></script>
    <script src="~/assets/js/jquery.validate.js"></script>
    <script src="~/assets/js/jquery-ui.js"></script>
    <script src="~/assets/libs/dropzone/dropzone-min.js"></script>
    <script src="~/assets/libs/choices.js/public/assets/scripts/choices.min.js"></script>
    <script src="~/assets/libs/flatpickr/flatpickr.min.js"></script>
    <script src="~/assets/libs/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/assets/libs/apexcharts/apexcharts.min.js"></script>
    <script src="~/assets/libs/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/js/spinner.js"></script>
    <script src="~/assets/datatables/datatables.js"></script>
    <script src="~/assets/datatables/datatables.min.js"></script>
    <script src="~/assets/libs/filepond/filepond.min.js"></script>
    <script src="~/assets/libs/filepond-plugin-image-preview/filepond-plugin-image-preview.min.js"></script>
    <script src="~/assets/libs/filepond-plugin-file-validate-size/filepond-plugin-file-validate-size.min.js"></script>
    <script src="~/assets/libs/filepond-plugin-image-exif-orientation/filepond-plugin-image-exif-orientation.min.js"></script>
    <script src="~/assets/libs/filepond-plugin-file-encode/filepond-plugin-file-encode.min.js"></script>
    <script>
        $(document).ready(function () {
            //bug search
            $(window).keydown(function (event) {
                if (event.keyCode == 13) {
                    event.preventDefault();
                    return false;
                }
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
