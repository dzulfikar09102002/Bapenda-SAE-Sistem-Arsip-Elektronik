<!DOCTYPE html>
<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="dark" data-sidebar-size="lg" data-sidebar-image="none" data-preloader="disable">
<html>
<head>
    <title>Login | Sistem Pemberkasan</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Badan Pendapatan Daerah Kota Surabaya" name="description" />
    <meta content="VELZON" name="author" />
    <link rel="shortcut icon" href="~/favicon.ico">
    <!-- Bootstrap Css -->
    <link href="~/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
    <!-- custom Css-->
    <link href="~/assets/css/custom.min.css" id="app-style" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="auth-page-wrapper pt-5">
        <div class="auth-one-bg-position auth-one-bg" id="auth-particles">
            <div class="bg-overlay"></div>
            
            <div class="shape">
                <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1440 120">
                    <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
                </svg>
            </div>
        </div>

        <div class="auth-page-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center mt-sm-3 mb-4 text-white-50">
                            <div class="login-bg">
                                <a href="https://bpkpd.surabaya.go.id/" class="d-inline-block auth-logo">
                                    <img src="~/assets/images/logo-surabaya.png" alt="" height="80">
                                </a>
                            </div>
                            <p class="mt-1 fs-1 fw-medium text-light">Badan Pendapatan Daerah Kota Surabaya</p>
                        </div>
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-sm-6 px-0 d-none d-sm-block">
                        <div class="d-flex justify-content-center align-items-center">
                            <img src="~/assets/images/login-bg.png" class="img-fluid mt-3" width="400" />
                        </div>
                    </div>
                    <div class="col-sm-6 ">
                        <div class="card mt-3">
                            <div class="card-body p-4">
                                <div class="text-center mt-2">
                                    <h5 class="text-primary fs-20">Selamat Datang !</h5>
                                    <p class="text-muted fs-20">Sistem Pemberkasan</p>
                                </div>

                                <div class="p-2 mt-4">
                                    @RenderBody()
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                &copy;
                                <script>document.write(new Date().getFullYear())</script> <strong><a href="https://bpkpd.surabaya.go.id/">Badan Pendapatan Daerah Kota Surabaya</a></strong>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script src="~/assets/js/modernizr-2.8.3.js"></script>
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/jquery.validate.js"></script>
    <script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/assets/libs/feather-icons/feather.min.js"></script>
    <script src="~/assets/js/pages/plugins/lord-icon-2.1.0.js"></script>
    <script src="~/assets/js/plugins.js"></script>
    <script src="~/assets/js/pages/particles.js"></script>
    <script src="~/assets/js/pages/particles.app.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
