@model Sistem_Pemberkasan.Models.Master.PendukungVM.Index

@{
    ViewData["Title"] = "Master Kategori Pendukung";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h2 class="mb-sm-0">Master Kategori Pendukung</h2>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Master</a></li>
                    <li class="breadcrumb-item active">Master Kategori Pendukung</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg">
        <div class="input-group mb-3">
            <button class="btn btn-primary d-flex align-items-center" onclick="Add()"><i class="ri-add-fill me-2"></i>Master Kategori Pendukung Baru </button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col">
        <div class="card mt-2 p-3 rounded-3">
            <div class="card-body">
                <!-- Striped Rows -->
                <div class="table-responsive">
                    <table id="tbl" class="w-100 table table-bordered dt-responsive nowrap table-striped table-hover align-middle dataTable no-footer dtr-inline collapsed">
                        <thead>
                            <tr>
                                <th scope="col" class="text-center">No</th>
                                <th scope="col" class="text-center">Nama Kategori Pendukung</th>
                                <th scope="col" class="text-center">Status Kategori Pendukung</th>
                                <th scope="col" class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var (item, index) in Model.KategoriPendukungBerkasList.Select((value, i) => (value, i + 1)))
                            {
                                <tr>
                                    <td class="text-center">@index</td>
                                    <td>@item.NamaKategoriPendukungBerkas</td>
                                    <td>
                                        @if (item.StatusKategoriPendukung == 1)
                                        {
                                            <div class="d-flex justify-content-center">
                                                <span class="badge bg-success">Active</span>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="d-flex justify-content-center">
                                                <span class="badge bg-danger">Non-Active</span>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-center">
                                            <button class="btn btn-secondary" onclick="Edit('@item.IdKategoriPendukungBerkas')"><div><i class="las la-edit"></i></div>Edit</button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        $(document).ready(function () {
            $("#pendukungActive").addClass('active')
            $('#tbl').DataTable({
                responsive: true
            });

        });

        function Add() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("Add", "KategoriPendukung")',
                success: function (data) {
                    $("#staticBackdrop .modal-title").html("Master Kategori Pendukung Baru");
                    $("#staticBackdrop .modal-body").html(data);
                    $("#staticBackdrop").modal('show');
                }
            });
        }

        function Edit(id) {
            $.ajax({
                type: "GET",
                data: { id: id },
                url: '@Url.Action("Edit", "KategoriPendukung")',
                success: function (data) {
                    if (data.Status === undefined) {
                        $("#staticBackdrop .modal-title").html("Edit Master Kategori Pendukung");
                        $("#staticBackdrop .modal-body").html(data);
                        $("#staticBackdrop").modal('show');
                    }
                    else {
                        swal.fire({
                            icon: 'warning',
                            title: '<b style="color:orange">Peringatan</b>',
                            text: data.Message
                        })
                    }
                }
            });
        }

    </script>

}

