<div class="row">
    <div class="col p-0">
        <div class="card mt-2 rounded-3">
            <div class="card-body">
                <!-- Striped Rows -->
                <div class="table-responsive">
                    <table id="tbl" class="w-100 table table-bordered dt-responsive nowrap table-striped table-hover align-middle dataTable no-footer dtr-inline collapsed">
                        <thead>
                            <tr>
                                <th class="text-center" scope="col">No</th>
                                <th class="text-center" scope="col">Jenis Role</th>
                                <th class="text-center" scope="col">Status Role</th>
                                <th class="text-center" scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                                <td>
                                    <div class="d-flex justify-content-center">
                                        <span class="badge bg-success">Success</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex justify-content-center ">
                                        <button class="btn btn-warning" onclick="EditRole()"><i class="las la-edit"></i></button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
        $(document).ready(function () {
            $("#roleActive").addClass('active')
            $('#tbl').DataTable();
        });
    function EditRole() {
        $.ajax({
            type: "GET",
            url: '@Url.Action("Edit", "Role")',
            success: function (data) {
                $("#staticBackdrop .modal-title").html("Edit Master Role");
                $("#staticBackdrop .modal-body").html(data);
                $("#staticBackdrop").modal('show');
            }
        });
    }
</script>