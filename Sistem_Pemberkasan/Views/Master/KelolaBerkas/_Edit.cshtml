@model Sistem_Pemberkasan.Models.Master.BerkasVM.Edit

<form asp-controller="KelolaBerkas" asp-action="update" method="post" enctype="multipart/form-data" id="FormKategoriBerkas">
    <div class="row mb-3">
        <div>
            <label for="bidang">Nama Kategori Berkas</label>
            @Html.TextBoxFor(x => x.BerkasRow.JenisKategoriBerkas, new { @class = "form-control", @id = "floatingInputNop", @required = "required" })

        </div>
    </div>


    <div class="row mb-3">
        <div>
            @Html.HiddenFor(x => Model.BerkasRow.IdKategoriBerkas, new { @class = "form-control" })
            <label for="bidang">Pilih Bidang</label>
            @Html.DropDownListFor(m => m.BerkasRow.IdBidang, new SelectList(Model.ListBidang, "IdBidang", "Singkatan"), "Pilih Kategori", new { @class = "form-select" })
        </div>
    </div>

    <div class="row mb-3">

        <div class="row mb-3">
            <div>
                List Dokumen
                @for (int i = 0; i < Model.ListFormDokumen.Count; i++)
                {
                    <div class="form-floating">
                        @Html.HiddenFor(x => Model.ListFormDokumen[i].IdFormDokumen, new { @class = "form-control" })
                    </div>
                    <div class="form-check form-switch">
                        <input id="status_dok_@i" class="form-check-input" type="checkbox" role="switch" name="ListFormDokumen[@i].StatusFormDokumen" @(Model.ListFormDokumen[i].StatusFormDokumen == true ? "checked" : "")>
                        <label class="form-check-label" for="flexswitchcheckdefault_@i">@Model.ListFormDokumen[i].IdDokumenNavigation.NamaDokumen</label>
                    </div>
                }

            </div>
            @* @for (int i = 0; i < 2; i++)
            {
                <div class="form-check form-switch">
                    <input id="chck_@i" class="form-check-input" type="checkbox" role="switch" value="lohe_@i">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Default switch checkbox input</label>
                </div>
            } *@
@* 
            <button class="btn btn-primary" onclick="fnCheck()">INPUT</button> *@
        </div>

        

    </div>

    <div class="row mb-3">
        <div>
            <label for="dokumen">Pilih Dokumen Baru Untuk Ditambahkan</label>
            @Html.ListBoxFor(m => m.daftarIDSelect, new MultiSelectList(Model.ListDokumen, "IdDokumen", "NamaDokumen"), new { @class = "form-control", @id = "dokumen", style = "background: none; border: none;" })
        </div>
    </div>

    <div class="col-12 mb-3">
        <label for="Status" class="form-label required-star">Status</label>
        @Html.DropDownListFor(x => x.BerkasRow.StatusKategoriBerkas,
                 new List<SelectListItem>
        {
        new SelectListItem { Text = "Active", Value = "1" },
        new SelectListItem { Text = "Non-active", Value = "0" }
        }, "Pilih Status", new { @class = "form-select" })
    </div>

    <div class="flex">
        <button type="button" class="btn btn-danger waves-effect waves-light me-2" data-bs-dismiss="modal">Tutup</button>
        <button type="button" class="btn btn-success waves-effect waves-light" onclick="fnSimpan()">Edit</button>
    </div>
</form>


<script>
    $(function () {
        let choices = new Choices("#dokumen", {
            removeItemButton: true,
            placeholder: true,
            placeholderValue: 'Pilih Dokumen',
        })
    });
    function fnCheck() {
        var listFormDokumenCount = @Html.Raw(Json.Serialize(Model.ListFormDokumen.Count));
        for (let i = 0; i < listFormDokumenCount; i++) {
            var isChecked = $('#status_dok_' + i).is(':checked');
            var value = $('#status_dok_' + i).val();
            console.log(isChecked);
            console.log(value);
        }
    }


    function fnSimpan() {
        var listFormDokumenCount = @Html.Raw(Json.Serialize(Model.ListFormDokumen.Count));
        var formData = new FormData($("#FormKategoriBerkas")[0]);
        var t = $("input[name='__RequestVerificationToken']").val();

        for (let i = 0; i < listFormDokumenCount; i++) {
            var isChecked = $('#status_dok_' + i).is(':checked');
            formData.append("ListFormDokumen[" + i + "].StatusFormDokumen", isChecked )
        }

        $.ajax({
            url: $("#FormKategoriBerkas").attr('action'),
            type: "POST",
            data: formData,
            dataType: "json",
            contentType: false,
            processData: false,
            headers:
            {
                "RequestVerificationToken": t
            },
            beforeSend: function () {
                $("#loader").show()
            },
            complete: function () { $("#loader").hide(); },
            success: function (resp) {
                if (resp.status == 1) {
                    Swal.fire({
                        icon: 'success',
                        title: '<b>Info</b>',
                        text: resp.message,
                    }).then((result) => {
                        window.location.reload();
                    })
                }
                else {
                    Swal.fire({
                        icon: 'warning',
                        title: '<b style="color:orange">Peringatan</b>',
                        text: resp.message,
                    })
                }
            }
        })

    }
</script>
