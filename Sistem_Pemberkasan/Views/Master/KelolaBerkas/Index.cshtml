<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">

            <h2 class="mb-sm-0">Kategori Berkas</h2>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Master</a></li>
                    <li class="breadcrumb-item active">Kategori Berkas</li>
                </ol>
            </div>

        </div>
    </div>
</div>


<div class="row">
    <div class="input-group mb-3">
        <button class="btn btn-primary rounded me-3" type="button" data-bs-toggle="modal" onclick="addKategori()"> <i class="ri-play-list-add-line me-2"></i>Tambah Kategori Berkas</button>
    </div>
</div>




<!-- end page title -->
<div class="card mt-2">
    <div class="card-body table-responsive">
        <!-- Striped Rows -->
        <div class="table-responsive">
            <table id="tbl" class="w-100 table table-bordered dt-responsive nowrap table-striped table-hover align-middle dataTable no-footer dtr-inline collapsed">
                <thead>
                    <tr>
                        <th class="text-center" scope="col">No.</th>
                        <th class="text-center" scope="col">Bidang</th>
                        <th class="text-center" scope="col">Kategori Berkas</th>
                        <th class="text-center col-3" scope="col">Kelengkapan Dokumen</th>
                        <th class="text-center " scope="col" >Status</th>
                        <th class="text-center" scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var (item , index) in Model.BerkasList.Select((value, i) => (value, i + 1)))
                    {
                        <tr>
                            <td class="text-center">@index</td>
                            <td>@item.IdBidangNavigation.Singkatan</td>
                            <td>@item.JenisKategoriBerkas</td>
                            <td>
                                <div class="d-flex flex-wrap align-midle">
                                    @foreach (var dok in item.MFormDokumen)
                                    {
                                        <span class="badge bg-info me-2 my-1">@dok.IdDokumenNavigation.NamaDokumen</span>
                                    }
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center">
                                @if (item.StatusKategoriBerkas == 1)
                                {
                                    <div class="d-flex">
                                        <span class="badge bg-success">Active</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex">
                                        <span class="badge bg-danger">Non-Active</span>
                                    </div>
                                }
                                </div>
                            </td>
                            <td>
                                <div class="d-flex justify-content-center">
                                    <button class="btn btn-secondary me-3" onclick="Edit('@item.IdKategoriBerkas')"><div><i class="las la-edit"></i></div>Edit</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


