@model Sistem_Pemberkasan.Models.Master.PegawaiVM.Index
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Master Pengguna";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h2 class="mb-sm-0">Master Pengguna</h2>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Master</a></li>
                    <li class="breadcrumb-item active">Master Pengguna</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg">
        <div class="input-group mb-3 d-flex">
            <button class="btn btn-primary d-flex align-items-center me-3 rounded" onclick="AddPengguna()">
                <i class="ri-user-add-line me-2"></i>Tambah Pengguna Baru
            </button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col">
        <div class="card mt-2 p-3 rounded-3">
            <div class="card-body">
                <!-- Striped Rows -->
                <div class="table-responsive">
                    <table id="tbl" class="table table-hover table-bordered table-striped align-middle w-100">
                        <thead>
                            <tr >
                                <th class="text-center" scope="col">No</th>
                                <th class="text-center" scope="col">NIK</th>
                                <th class="text-center" scope="col">Nama Pengguna</th>
                                <th class="text-center" scope="col">Nomor Telepon</th>
                                <th class="text-center" scope="col">Email</th>
                                <th class="text-center" scope="col">Bidang</th>
                                <th class="text-center" scope="col">Role</th>
                                <th class="text-center" scope="col">Status Pengguna</th>
                                <th class="text-center" scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var (item, index) in Model.ListPegawai.Select((value, i) => (value, i + 1)))
                            {
                                <tr>
                                    <td class="text-center">@index</td>
                                    <td>@item.Nik</td>
                                    <td>@item.NikNavigation.NamaPegawai</td>
                                    <td>@item.NikNavigation.NoTelepon</td>
                                    <td>@item.Email</td>
                                    <td>@item.NikNavigation.IdBidangNavigation.NamaBidang</td>
                                    <td>@item.IdRoleNavigation.JenisRole</td>
                                    <td>
                                        <div class="d-flex justify-content-center">
                                            <span class="badge @(item.NikNavigation.StatusPegawai == 1 ? "bg-success" : "bg-danger")">
                                                @(item.NikNavigation.StatusPegawai == 1 ? "Active" : "Non Active")
                                            </span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-center ">
                                            <button class="btn btn-secondary" onclick="EditPengguna('@item.Nik')"><div><i class="las la-edit"></i></div>Edit</button>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        $(document).ready(function () {
            $("#penggunaActive").addClass('active')
            $('#tbl').DataTable({
                responsive: true,
            });

        });

        function AddPengguna() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("Add", "Pegawai")',
                success: function (data) {
                    $("#staticBackdrop .modal-dialog").addClass("modal-dialog-centered modal-dialog-scrollable");
                    $("#staticBackdrop .modal-title").html("Tambah Pengguna Baru");
                    $("#staticBackdrop .modal-body").html(data);
                    $("#staticBackdrop").modal('show');
                }
            });
        }

        function EditPengguna(Nik) {
            $.ajax({
                type: "GET",
                data: { Nik: Nik },
                url: '@Url.Action("Edit", "Pegawai")',
                success: function (data) {
                    $("#staticBackdrop .modal-dialog").addClass("modal-dialog-centered modal-dialog-scrollable");
                    $("#staticBackdrop .modal-title").html("Edit Data Pengguna");
                    $("#staticBackdrop .modal-body").html(data);
                    $("#staticBackdrop").modal('show');
                }
            });
        }

        function DetailPengguna() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("Detail", "Pegawai")',
                success: function (data) {
                    $("#staticBackdrop .modal-title").html("Detail Data Pengguna");
                    $("#staticBackdrop .modal-body").html(data);
                    $("#staticBackdrop").modal('show');
                }
            });
        }

        function AddRole() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("Add", "Role")',
                success: function (data) {
                    $("#staticBackdrop .modal-dialog").addClass("modal-lg");
                    $("#staticBackdrop .modal-title").html("List Role Pengguna");
                    $("#staticBackdrop .modal-body").html(data);
                    $("#staticBackdrop").modal('show');
                }
            });
        }

    </script>

}
