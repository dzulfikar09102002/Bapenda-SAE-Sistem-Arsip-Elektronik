@model Sistem_Pemberkasan.Models.Master.BidangVM.Index
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Master Bidang";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h2 class="mb-sm-0">Master Bidang</h2>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Master</a></li>
                    <li class="breadcrumb-item active">Master Bidang</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg">
        <div class="input-group mb-3">
            <button class="btn btn-primary d-flex align-items-center rounded" onclick="Add()"><i class="ri-add-fill me-2"></i>Tambah Bidang Baru </button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col">
        <div class="card mt-2 p-3 rounded-3">
            <div class="card-body">
                <!-- Striped Rows -->
                <div class="table-responsive">
                    <table id="tbl" class="w-100 table table-bordered dt-responsive nowrap table-striped table-hover align-middle dataTable no-footer dtr-inline collapsed">
                        <thead>
                            <tr>
                                <th scope="col" class="text-center">No</th>
                                <th scope="col" class="text-center">Nama Bidang</th>
                                <th scope="col" class="text-center">Singkatan Bidang</th>
                                <th scope="col" class="text-center">Status Bidang</th>
                                <th scope="col" class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>

  
                            @foreach (var (item , index) in Model.BidangList.Select((value , i) => (value, i + 1))){

                                <tr>
                                    <td class="text-center">@index</td>
                                    <td>@item.NamaBidang</td>
                                    <td>@item.Singkatan</td>
                                    <td>
                                        <div class="d-flex justify-content-center">
                                            <span class="badge @(item.StatusBidang == 1 ? "bg-success" : "bg-danger")">
                                                @(item.StatusBidang == 1 ? "Active" : "Non Active")
                                            </span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-center ">
                                            <button class="btn btn-secondary" onclick="Edit('@item.IdBidang')"><div><i class="las la-edit"></i></div>Edit</button>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        $(document).ready(function () {
            $("#bidangActive").addClass('active')
            $('#tbl').DataTable({
                responsive: true
            });

        });

        function Add() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("Add")',
                success: function (data) {
                    $("#staticBackdrop .modal-title").html("Tambah Bidang Baru");
                    $("#staticBackdrop .modal-body").html(data);
                    $("#staticBackdrop").modal('show');
                }
            });
        }

        function Edit(IdBidang) {
            $.ajax({
                type: "GET",
                data: {idBidang : IdBidang},
                url: '@Url.Action("Edit","Bidang")',
                success: function (data) {
                    $("#staticBackdrop .modal-title").html("Edit Detail Bidang");
                    $("#staticBackdrop .modal-body").html(data);
                    $("#staticBackdrop").modal('show');
                }
            });
        }

    </script>

}
