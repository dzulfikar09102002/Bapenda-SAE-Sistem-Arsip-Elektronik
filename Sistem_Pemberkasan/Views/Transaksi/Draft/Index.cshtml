    </script>
    <script>
        function saveFile() {
            var formData = new FormData($("#formUpload")[0]);
            var t = $("input[name='__RequestVerificationToken']").val();
            console.log("upload()")
            $.ajax({
                url: $("#formUpload").attr('action'),
                type: "POST",
                data: formData,
                dataType: "json",
                contentType: false,
                processData: false,
                headers:
                {
                    "RequestVerificationToken": t
                },
                beforeSend: function () {
                    $("#loader").show()
                },
                complete: function () { $("#loader").hide(); },
                success: function (resp) {
                    if (resp.status == 1) {
                        Swal.fire({
                            icon: 'success',
                            title: '<b>Info</b>',
                            text: resp.message,
                        }).then((result) => {
                            window.location.reload();
                        })
                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            title: '<b style="color:orange">Peringatan</b>',
                            text: resp.message,
                        })
                    }
                }
            });

        }
    </script>

    <script>
        $(document).ready(function () {
            $('#partialUpload').hide();
            $('#dropdown').hide();
            $('#ListForm').on('change', function () {
                if ($(#ListForm).find(":selected").val() === "kosong") {
                    $('#partialUpload').hide();
                }
                else {
                    getDataForm($(#ListForm).find(":selected").val());
                    alert($(#ListForm).find(":selected").val())

                }
