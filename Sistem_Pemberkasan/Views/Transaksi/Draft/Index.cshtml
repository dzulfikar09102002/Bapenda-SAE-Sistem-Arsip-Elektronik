                success: function (resp) {
                    if (resp.status == undefined) {
                        $('#partialUpload').show();
                        $('#partialUpload').html(resp);
                        $("#loader").hide()
                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            title: '<b style="color:orange">Peringatan</b>',
                            text: resp.message,
                        })
                        $("#loader").hide()
                    }
                }
            })
        }

    </script>
