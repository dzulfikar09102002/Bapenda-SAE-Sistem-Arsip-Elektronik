            var t = $("input[name='__RequestVerificationToken']").val();
            console.log("upload()")

            $.ajax({
                url: '@(Url.Action("GetDataForm", "Draft"))',
                type: "GET",
                data: { id: id_kategori_bidang },
                headers:
                {
                    "RequestVerificationToken": t
                },
                beforeSend: function () {
                    $("#loader").show()
                    $('#partialUpload').hide();
