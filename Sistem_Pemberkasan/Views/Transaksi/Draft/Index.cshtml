                url: '@Url.Action("Filter")',
                headers:
                {
                    "RequestVerificationToken": t
                },
                beforeSend: function () {
                    $("#loader").show()
                },
                complete: function () { $("#loader").hide(); },
                success: function (resp) {
                    if (resp.status == undefined) {
                        $("#loader").hide()
                        $('#table').show();
                        $('#table').html(resp);
                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            title: '<b style="color:orange">Peringatan</b>',
                            text: resp.message,
                        })
                        $("#loader").hide()
